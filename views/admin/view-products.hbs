<style>
  tbody tr:nth-child(n+5) {
    display: none;
  }
  #less{
    display: none;
  }
</style>

<section>
    <div class="container">
        <div class="row mt-4" style="width: 140px;height: 40px;margin-left: auto">
            <a href="/admin/add-products" class="btn btn-success">Add Product</a>
        </div>
        <table class="table mt-5">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Title</th>
            <th scope="col">Category</th>
            <th scope="col">Price</th>
            <th scope="col">Offer Price</th>
            <th scope="col">Stock</th>
          </tr>
        </thead>
        <tbody>
            {{#each products}}
          <tr>
            <th scope="row">{{@index}}</th>
            <td>{{this.Name}}</td>
            <td>{{this.Category}}</td>
            <td>{{this.Price}}</td>
            <td>{{this.OfferPrice}}</td>
            <td>{{this.Stock}}</td>
            <td><img style="width: 70px;height: 70px;" src="/product-images/{{this._id}}_1.jpg" alt=""></td>
              <td class="pt-3"><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a></td>
              <td class="pt-3"><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.Name}} ?')">Delete</a></td>
          </tr>
          {{/each}}
        </tbody>
        </table>
        <button type="button" class="btn btn-primary" id="show" style="margin-left: 450px;margin-bottom: 50px;">Show More</button>
        <button type="button" class="btn btn-primary" id="less" style="margin-left: 450px;margin-bottom: 50px;">Show Less</button>
    </div>
</section>

<script>

  document.getElementById("show").addEventListener("click", function(){
    var tableRows = document.querySelectorAll("tbody tr:nth-child(n+5)");
    for(var i = 0; i < tableRows.length; i++) {
      tableRows[i].style.display = "table-row";
    }
    document.getElementById("show").style.display = "none";
    document.getElementById("less").style.display = "block";
  });

  document.getElementById("less").addEventListener("click", function(){
    var tableRows = document.querySelectorAll("tbody tr:nth-child(n+5)");
    for(var i = 0; i < tableRows.length; i++) {
      tableRows[i].style.display = "none";
    }
    document.getElementById("show").style.display = "block";
    document.getElementById("less").style.display = "none";
  });

</script>