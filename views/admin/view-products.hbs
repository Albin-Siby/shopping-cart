<style>
  #productsTable_filter{
    margin-bottom: 20px;
  }
  #productsTable_filter input {
    background-color: white;
  }
   #productsTable_filter label{
    font-size: 18px;
    font-weight: 500;
   }
   #productsTable_paginate {
    margin-top: 10px;
    margin-bottom: 10px;
   }
</style>

<section>
    <div class="container">
        <div class="row mt-4 mb-5" style="width: 540px;height: 40px;margin-left: 900px">
            <div class="col-6">
              <a href="/admin/add-products" class="btn btn-success">Add Product</a>
            </div>
            <div class="col-6" style="margin-left: -120px;">
              <a href="/admin/add-category" class="btn btn-success">Add Category</a>
            </div>
        </div>
        <table class="table mt-5" id="productsTable">
        <thead style="background-color: black;">
          <tr>
            <th scope="col" style="color: white;">No</th>
            <th scope="col" style="color: white;">Title</th>
            <th scope="col" style="color: white;">Category</th>
            <th scope="col" style="color: white;">Price</th>
            <th scope="col" style="color: white;">Offer Price</th>
            <th scope="col" style="color: white;">Stock</th>
            <th scope="col" style="color: white;">Image</th>
            <th scope="col" style="color: white;">Actions</th>
          </tr>
        </thead>
        <tbody>
            {{#each products}}
          <tr>
            <th scope="row">{{@index}}</th>
            <td>{{this.Name}}</td>
            <td>{{this.Category}}</td>
            <td>{{this.Price}}</td>
            <td>{{this.OfferPrice}}</td>
            <td>{{this.Stock}}</td>
            <td><img style="width: 70px;height: 70px;" src="/product-images/{{this._id}}_1.jpg" alt=""></td>
              <td class="pt-3">
                <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.Name}} ?')">Delete</a>
              </td>
          </tr>
          {{/each}}
        </tbody>
        </table>
    </div>
    <hr class="m-3">
</section>

<script>

  $( function () {
    $('#productsTable').DataTable({
        "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]]
    });
} );


  $( function () {
    $('#productsTable').DataTable();
} );

</script>