<div class="row">
    <div class="col-md-6 m-auto p-5">
        <div class="container mt-5 pl-5">
            <h2 class="text-center">Admin Login</h2>
            <form action="/admin" method="post">

                <div class="form-group mt-5">
                    <label><strong>Username</strong></label>
                    <input type="email" class="form-control" name="Username" value="{{values.Username}}" placeholder="Enter Username">    
                </div>

                <div class="form-group mt-3">
                    <label><strong>Password</strong></label>
                    <input type="password" class="form-control" name="Password" value="{{values.Password}}" placeholder="Password">
                </div>

                {{#if loginErr}}
                {{#each loginErr}}
                    <p class="mt-3" id="error" style="color: red;">{{msg}}</p>
                {{/each}}
                {{/if}}

                {{#if loginError}}
                    <p class="mt-3" id="error" style="color: red;">{{loginError}}</p>
                {{/if}}

                <div class="mt-5">
                    <button type="submit" class="btn btn-primary float-end">Login</button>
                </div>
            </form>
        </div>
    </div>
</div> 