<section>
    <div class="container">

        {{#if products}}

        <table class="table mt-5">
            <thead class="table-dark">
                <tr>

                    <th scope="col">Item</th>
                    <th scope="col">Title</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col"></th>

                </tr>
            </thead>

            <tbody>

                {{#each products}}
                    
                    <tr>
                   
                        <td class="p-3"><img src="/product-images/{{this.product._id}}.jpg" alt="" style="width: 70px;height: auto;"></td>
                        <td class="p-3">{{this.product.Name}}</td>
                        <td class="p-3">Rs.{{this.product.Price}}</td>
                   
                    <td class="p-3">
                        <button class="cart-item-count bg-secondary mr-5 " style="border: 1px solid;" onclick="changeQuantity('{{this._id}}','{{this.product._id}}',-1)">-</button>
                         <span id="{{this.product._id}}"> {{this.quantity}} </span>
                        <button class="cart-item-count bg-secondary ml-5 " style="border: 1px solid;" onclick="changeQuantity('{{this._id}}','{{this.product._id}}',1)">+</button>
                    </td>
                    <td class="p-3"><button class="btn btn-outline-danger" onclick="deleteCartProduct('{{this._id}}','{{this.product._id}}')"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                        <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                        </svg></button>
                    </td>

                    </tr>
                {{/each}}
            </tbody>
        </table>

        {{else}}

            <div class="container mt-3 p-3" style="background-color: grey;">
        		<h1 class="page-title" style="text-align: center;color:blue;">Your Cart</h1>
        	</div>

            <div id="cartGif">

            <div class="d-flex justify-content-center m-5 text-center">
                <img class="mx-auto " style=";" src="https://hakimitr.com/assets/website/images/empty-cart.gif" alt="">
                
            </div>
            <div class="text-center mt-3">
                <h4>Oops , Cart is empty</h4>
                <h5>Please fill your cart</h5>
                <a href="/" class="btn btn-warning mt-3">Continue Shopping</a>
            </div>                    
            </div>

        {{/if}}

    </div>
</section>
<h1></h1>
<footer>
   
</footer>