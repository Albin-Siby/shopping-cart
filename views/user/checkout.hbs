<section>
    {{#if user}}
    <div class="container mt-5">
        <form action="">
        <div class="row">    
            <div class="col-md-6">
                <h3>Enter Delivery Details</h3>
                    <div class="form-group mt-5">
                        <label for=""><strong> Address</strong></label>
                        <input class="form-control p-3" type="text" placeholder="Enter address here" required>
                    </div>
                    <div class="form-group mt-3">
                        <label for=""><strong> Pincode</strong></label>
                        <input class="form-control" type="tel" placeholder="Enter pincode here" required>
                    </div>
                    <div class="form-group mt-3">
                        <label for=""><strong> Mobile</strong></label>
                        <input class="form-control" type="tel" placeholder="Enter mobile number here">
                    </div>
            </div>
            </form>
            <div class="col-md-4 mt-5">
                <div class="container p-5" style="border: 2px solid gray;background-color:white;">
                    <h5 class="mt-3">Total Amount <span class="float-end" style="margin-right: 20px;">1000</span></h5>
                    <hr class="mt-3" style="height: 2px;background-color:black;">
                    <div class="payment">
                        <h4 class="mt-5">Payment Method</h4>
                        <label class="radio-inline mt-3">
                            <input type="radio" name="payment-method" value="COD" checked> COD
                        </label><br>
                        <label class="radio-inline mt-3">
                            <input type="radio" name="payment-method" value="ONLINE"> Online Payment
                        </label>
                    </div>
                </div>
            </div>    
        </div>
    </div>
    {{/if}}
</section>