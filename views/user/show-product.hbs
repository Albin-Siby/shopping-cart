<style>
  .rating i:nth-child(-n+4) {
    color: orange;
  }
  #card-name{
    color: rgb(255, 0, 0);
  }
</style>

<section style="background-color: rgb(255, 255, 255);">
        <div class="row">  
            <div class="col-md-6">  
                <img src="/product-images/{{oneProduct._id}}.jpg" alt="product image" style="width: 700px;height:500px">
            </div>

            <div class="col-md-6">
                
                    <div class="p-5">
                        <h1 class="card-title mt-5" id="card-name">{{oneProduct.Name}}</h1>
                        <div class="rating mt-3">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                        </div>
                        <h5 class="card-text mt-5" style="color: rgb(15, 15, 15);">{{oneProduct.Description}}</h5>
                        <h3 class="card-title mt-5" id="card-price" style="color: blue;">Rs: {{oneProduct.Price}}</h3>
                    </div>
                
            </div>
        </div> 
    </div>
</section>