<style>
  .rating i:nth-child(-n+4) {
    color: orange;
  }
  #card-name{
    color: rgb(255, 0, 0);
  }
  .custom-prev-btn, .custom-next-btn {
    background-color: #ff0000; /* replace with desired color */
    width: 40px;
    height: 40px;
    margin-top: 250px;
  }

</style>

<section style="background-color: rgb(255, 255, 255);">
        <div class="row">  
            <div class="col-md-6">  

                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                  <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                  </div>
                  <div class="carousel-inner">
                    <div class="carousel-item active">
                      <img src="/product-images/{{oneProduct._id}}_1.jpg" class="d-block w-100" alt="product image" style="height: 500px;">
                    </div>
                    <div class="carousel-item">
                      <img src="/product-images/{{oneProduct._id}}_2.jpg" class="d-block w-100" alt="product image" style="height: 500px;">
                    </div>
                    <div class="carousel-item">
                      <img src="/product-images/{{oneProduct._id}}_3.jpg" class="d-block w-100" alt="product image" style="height: 500px;">
                    </div>
                  </div>
                  <button class="carousel-control-prev custom-prev-btn" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                  </button>
                  <button class="carousel-control-next custom-next-btn" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                  </button>
                </div>

            </div>

            <div class="col-md-6">
                
                    <div class="p-5">
                        <h1 class="card-title mt-5" id="card-name">{{oneProduct.Name}}</h1>
                        <div class="rating mt-3">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                        </div>
                        <h5 class="card-text mt-5" style="color: rgb(15, 15, 15);">{{oneProduct.Description}}</h5>
                        <h3 class="card-title mt-5" id="card-price" style="color: blue;">Rs: {{oneProduct.Price}}</h3>
                    </div>
                    <a href="/" class="btn btn-success mt-3 d-grid mx-auto col-2">Go Back</a>
            </div>
        </div> 
    </div>
</section>