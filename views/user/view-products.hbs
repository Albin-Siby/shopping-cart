<style>
    #btn1:hover {
        background-color: black;
        color: white;
    }
    .btn:hover{
        background-color: silver;
    }
    .nav-link:hover{
        color: orange;
    }
</style>

    <section>

        <div class="container mt-5">
            <div class="row">

                {{#each products}}
                    <div class="col-md-3 p-3">
                        <div class="card" style="width: 16rem;height: 500px;">
                            <img style="width: 100%;height: 60%;" src="/product-images/{{this._id}}.jpg" class="card-img-top p-1 pb-1" alt="">
                            <div class="card-body">
                                <div>
                                    <h4 class="card-title">{{this.Name}}</h4>
                                    <p class="card-text" style="color: rgb(99, 98, 98);">{{this.Description}}</p>
                                    <h5 class="card-title">Rs: {{this.Price}}</h5>
                                </div>
                                <div class="float-end mt-3">
                                    {{!-- <a href="/add-to-cart/{{this._id}}" class="btn btn-primary" id="btn1">Add to cart</a> --}}
                                    <button  onclick="addToCart('{{this._id}}')" class="btn btn-primary" > Add to Cart </button>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/each}}

            </div>
        </div>
    </section>