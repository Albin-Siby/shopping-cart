<style>
    .heading{
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        text-align: center;
    }
    .rating-text{
        color: gray;
    }
    #btn1:hover {
        background-color: black;
        color: white;
    }
    .nav-link:hover{
        color: orange;
    }
    #card-name{
        font-family: 'Times New Roman', Times, serif;
    }
    #card-price{
        color: rgb(6, 60, 211);
    }
    .card{
        position: relative;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        transform: scale(1);
        box-shadow: 0 0 0 0 rgba(0, 0, 0, 0.2); 
    }
    .card:hover {
        transform: scale(1.1); 
        box-shadow: 0 10px 20px 0 rgba(0, 0, 0, 0.2);
    }
    .card:hover .image {
        filter: blur(2px); 
    }
    .card #cart-button{
        display: none;
        position: absolute;
        left: 0px;
        bottom: 50%;
    }
    .card #view-button{
        display: none;
        position: absolute;
        left: 50%;
        bottom: 50%;
    }
    .card:hover #cart-button{
        display: block;
    }
    .card:hover #view-button{
        display: block;
    }
    .fa{
        color: orange;
    }
    #cart-button:hover,#view-button:hover{
        background-color: white;
        color: black;
    }
    .owl-prev {
        left: -30px;
    }
    .owl-next {
        right: -30px;
    }
    .owl-prev, .owl-next {
        position: absolute;
        top: 120px;
    }
    .owl-prev span, .owl-next span {
        font-size: 50px;
        color: black;
    }
</style>

    <section>
        <hr style="height:2px;background-color:black;margin:10px">
        <h4 class="text-center">Explore Categories</h4>
        <div class="container mt-4">
            <div class="row">
                {{#each categories}}
                <div class="col-2" style="margin-left: 30px;">   
                    <button class="btn btn-outline-dark" style="width:140px;height: 80px; border-radius:50%;"><a href="/category/{{this._id}}" style="text-decoration: none;">{{this.Name}}</a></button>
                </div>
                {{/each}}
            </div>
        </div>
        <hr style="height:2px;background-color:black;margin:40px">
        <div class="container mt-5">
            <h3 class="heading" style="color: blue;"><u>Products</u></h3>
            <div class="row">
                
                <div class="owl-carousel owl-theme">
                {{#each normalProducts}}
                    <div class="col-md-2 p-3">
                        <div class="card" style="width: 11rem;height: 300px;">
                            <img style="width: 100%;height: 50%;" src="/product-images/{{this._id}}_1.jpg" class="image card-img-top p-1 pb-1" alt="" id="image">
                            <div class="card-body">
                                <div>
                                    <h5 class="card-title" id="card-name">{{this.Name}}</h5>
                                    <h5 class="card-title mt-3" id="card-price">Rs: {{this.Price}}</h5>
                                </div>
                                <div class="ratings">
                                    <i class="fa fa-star rating-color"></i>
                                    <i class="fa fa-star rating-color"></i>
                                    <i class="fa fa-star rating-color"></i>
                                    <i class="fa fa-star rating-color"></i>
                                    <i class="fa fa-star-half-alt"></i>
                                    <span class="rating-text">(99)</span>
                                </div>
                                <div>
                                    <button  onclick="addToCart('{{this._id}}')" class="btn btn-dark" id="cart-button" style="width: 48%;">
                                        <i class="fas fa-shopping-cart"></i>
                                    </button>
                                    <a href="/show-product/{{this._id}}" title="View product"><button class="btn btn-dark" id="view-button" style="width: 50%;">
                                        <i class="fas fa-eye"> View</i>
                                    </button></a>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/each}}
                </div>
               
            </div>
        </div>
        <hr style="height:3px;background-color:black;margin:40px">
        <div class="container mt-3">
            <h3 class="heading" style="color: blue;"><u>Offer Products</u></h3>
            <div class="row">

            <div class="owl-carousel owl-theme">
            {{#each offerProducts}}
                <div class="col-md-2 p-3">
                    <div class="card" style="width: 11rem;height: 350px;">
                        <img style="width: 80%;height: 50%;margin-left:20px" src="/product-images/{{this._id}}_1.jpg" class="image card-img-top p-1 pb-1" alt="" id="image">
                            <div class="card-body">
                                <div>
                                    <h5 class="card-title" id="card-name">{{this.Name}}</h5>
                                    {{!-- <p class="card-text" style="color: rgb(99, 98, 98);">{{this.Description}}</p> --}}
                                    <h5 class="card-title mt-3" id="card-price">Rs: {{this.OfferPrice}}</h5>
                                    <h6>
                                        <del>
                                            <span style="color: red;">Rs: {{this.Price}}</span>
                                        </del>
                                    </h6>

                                </div>
                                <div class="ratings">
                                    <i class="fa fa-star rating-color"></i>
                                    <i class="fa fa-star rating-color"></i>
                                    <i class="fa fa-star rating-color"></i>
                                    <i class="fa fa-star rating-color"></i>
                                    <i class="fa fa-star-half-alt"></i>
                                    <span class="rating-text">(99)</span>
                                </div>
                                <div>
                                    <button  onclick="addToCart('{{this._id}}')" class="btn btn-dark" id="cart-button" style="width: 48%;">
                                        <i class="fas fa-shopping-cart"></i>
                                    </button>
                                    <a href="/show-product/{{this._id}}" title="View product"><button class="btn btn-dark" id="view-button" style="width: 50%;">
                                        <i class="fas fa-eye"> View</i>
                                    </button></a>
                                </div>
                            </div>
                    </div>
                </div>
            {{/each}}
            </div>

            </div>
        </div>
        <hr style="height:3px;background-color:black;margin:40px">
          <div class="container mb-3">
            <div class="row">
                <div class="col-2">   
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRIl630jcIJmZWVArC2QqpPlmUsF4dwFU9mN2QOoU3KZRisgfmFHpwrfD6SSKyZxMI2WZs&usqp=CAU" style="width:225px;height: 130px;" alt="">
                </div>
                <div class="col-2" style="margin-left: 90px;">     
                    <img src="https://energymonkey.co.uk/wp-content/uploads/2020/07/RETURNS.jpg" style="width: 225px;height:130px;" alt="">
                </div> 
                <div class="col-2" style="margin-left: 90px;">
                    <img src="https://static.vecteezy.com/system/resources/previews/012/482/264/original/30-days-money-back-guarantee-icon-for-graphic-design-logo-website-social-media-mobile-app-ui-illustration-vector.jpg" style="width: 225px;height:130px;" alt="">
                </div>
                <div class="col-2" style="margin-left: 90px;">
                    <img src="https://static.vecteezy.com/system/resources/thumbnails/005/747/719/small/customer-support-icon-24-hours-call-center-icon-vector.jpg" style="width: 225px;height:130px;" alt="">
                </div>
            </div>
        </div>
    </section>

    <script>

        $('.owl-carousel').owlCarousel({
            dots:true,
            loop:true,
            margin:10,
            autoplay:true,
            autoplayHoverPause:true,
            autoplayTimeout:3000,
            nav:true,
            responsive:{
                0:{
                    items:1
                },
                600:{
                    items:3
                 },
                 1200:{
                    items:5
                 }
            }
        })
    </script>