<div class="row">
    <div class="col-md-6 m-auto p-5">
        <div class="container mt-3 pl-5">
            <h2 class="text-center">Create new account</h2>
            <form action="/signup" method="post">

                <div class="form-group mt-5">
                    <label><strong>Name</strong></label>
                    <input type="text" class="form-control" name="Name" placeholder="Enter name" required>
                </div>

                <div class="form-group mt-3">
                    <label><strong>Email address</strong></label>
                    <input type="email" class="form-control" name="Email" placeholder="Enter email" required>
                </div>

                <div class="form-group mt-3">
                    <label><strong>Mobile</strong></label>
                    <input type="tel" class="form-control" name="Mobile" placeholder="Enter Mobile Number" required>
                </div>

                <div class="form-group mt-3">
                    <label><strong>Password</strong></label>
                    <input type="password" class="form-control" name="Password" placeholder="Password" required>
                </div>

                <div class="mt-5">
                    <a href="/login">Already have an account ? Login.</a>
                <button type="submit" class="btn btn-primary float-end">Sign up</button>
                </div>

            </form>
        </div>
    </div>
</div>