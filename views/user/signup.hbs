<div class="row">
    <div class="col-md-6 m-auto p-5">
        <div class="container mt-3 pl-5">
            <h2 class="text-center">Create new account</h2>
            <form action="/signup" method="post" id="signup-form">

                <div class="form-group mt-5">
                    <label><strong>Name</strong></label>
                    <input type="text" class="form-control" name="Name" value="{{ values.Name }}" placeholder="Enter name">
                   <small id="name-error" class="text-danger"></small>
                </div>

                <div class="form-group mt-3">
                    <label><strong>Email address</strong></label>
                    <input type="email" class="form-control" name="Email" value="{{ values.Email }}" placeholder="Enter email">
                    <small id="email-error" class="text-danger"></small>
                </div>

                <div class="form-group mt-3">
                    <label><strong>Mobile</strong></label>
                    <input type="tel" class="form-control" name="Mobile" value="{{ values.Mobile }}" placeholder="Enter Mobile Number">
                    <small id="mobile-error" class="text-danger"></small>
                </div>

                <div class="form-group mt-3">
                    <label><strong>Password</strong></label>
                    <input type="password" class="form-control" name="Password" value="{{ values.Password }}" placeholder="Password">
                    <small id="password-error" class="text-danger"></small>
                </div>

                {{#if errors}}
                {{#each errors}}
                    <p class="mt-3" id="error" style="color: red;">{{msg}}</p>
                {{/each}}
                {{/if}}

                {{#if signupError}}
					<P class="mt-3" id="err" style="color: red;">{{signupError}}</P> 
                {{/if}}

                <div class="mt-5">
                    <a href="/login">Already have an account ? Login.</a>
                <button type="submit" class="btn btn-primary float-end"  >Sign up</button>
                </div>

            </form>
        </div>
    </div>
</div>