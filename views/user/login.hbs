<div class="row">
    <div class="col-md-6 m-auto p-5">
        <div class="container mt-5 pl-5">
            <h2 class="text-center">Login</h2>
            <form action="/login" method="post">

                <div class="form-group mt-5">
                    <label><strong>Email address</strong></label>
                    <input type="email" class="form-control" name="Email" value="{{values.Email}}" placeholder="Enter email">    
                </div>

                <div class="form-group mt-3">
                    <label><strong>Password</strong></label>
                    <input type="password" class="form-control" name="Password" value="{{ values.Password}}" placeholder="Password">
                </div>

                {{#if loginError}}
                {{#each loginError}}
                    <p class="mt-3" id="error" style="color: red;">{{msg}}</p>
                {{/each}}
                {{/if}}

                {{#if loginErr}}
                    <p class="mt-3" id="error" style="color: red;">{{loginErr}}</p>
                {{/if}}

                <div class="mt-5">
                    <a href="/signup">Create new account ?</a>
                <button type="submit" class="btn btn-primary float-end">Login</button>
                </div>
            </form>
        </div>
    </div>
</div> 